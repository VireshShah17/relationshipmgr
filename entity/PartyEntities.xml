<?xml version="1.0" encoding="UTF-8" ?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    <!-- Party Type Entity -->
    <entity entity-name="PartyType" package="moqui.partytype">
        <field name="partyTypeId" type="id" is-pk="true"/>
        <field name="description" type="text-medium"/>
        <seed-data>
            <PartyType partyTypeId="PERSON" description="Indiviual Person"/>
            <PartyType partyTypeId="ORGANIZATION" description="ORG"/>
        </seed-data>
    </entity>

    <!-- Party Entity -->
    <entity entity-name="Party" package="moqui.party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="partyTypeId" type="id"/>
        <relationship type="one" related="moqui.partytype.PartyType" fk-name="partyTypeId"/>

        <seed-data>
            <Party partyId="PER123" partyTypeId="PERSON"/>
            <Party partyId="ORG456" partyTypeId="ORGANIZATION"/>
            <Party partyId="PER789" partyTypeId="PERSON"/>
        </seed-data>
    </entity>


    <!--    Person Entity-->
    <entity entity-name="Person" package="moqui.person" short-alias="person">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="firstName" type="text-short"/>
        <field name="lastName" type="text-short"/>
        <field name="birthDate" type="date"/>
        <relationship type="one" related="moqui.party.Party" fk-name="Party_Person">
            <key-map field-name="partyId" related="partyId"/>
        </relationship>
        <seed-data>
            <Person partyId="PER123" firstName="John" lastName="Doe" birthDate="1990-01-01"/>
        </seed-data>
    </entity>

<!--    Organization entity-->
    <entity entity-name="PartyGroup" package="moqui.partygroup" short-alias="partyGroup">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="organizationName" type="text-short"/>
        <relationship type="one" related="moqui.party.Party" short-alias="partyId">
            <key-map field-name="partyId" related="partyId"/>
        </relationship>
        <seed-data>
            <PartyGroup partyId="ORG456" organizationName="ABC"/>
        </seed-data>
    </entity>

<!-- Party Role Type -->
    <entity entity-name="PartyRoleType" package="moqui.partyroletype">
        <field name="roleTypeId" type="id" is-pk="true"/>
        <field name="description" type="text-medium"/>
        <seed-data>
            <PartyRoleType roleTypeId="CUSTOMER" description="customer"/>
            <PartyRoleType roleTypeId="EMPLOYEE" description="employee"/>
            <PartyRoleType roleTypeId="EMPLOYER" description="employer"/>
        </seed-data>
    </entity>

<!--    Party Role-->
    <entity entity-name="PartyRole" package="moqui.partyrole">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="roleTypeId" type="id" is-pk="true"/>
        <relationship type="one" related="moqui.party.Party" short-alias="partyId">
            <key-map field-name="partyId"/>
        </relationship>
        <relationship type="one" related="moqui.partyroletype.PartyRoleType" short-alias="roleTypeId">
            <key-map field-name="roleTypeId"/>
        </relationship>
        
        <seed-data>
            <PartyRole partyId="PER123" roleTypeId="CUSTOMER"/>
            <PartyRole partyId="PER123" roleTypeId="EMPLOYEE"/>
            <PartyRole partyId="ORG456" roleTypeId="EMPLOYER"/>
        </seed-data>
    </entity>
</entities>
