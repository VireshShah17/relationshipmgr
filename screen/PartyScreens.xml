<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">

    <transition name="createParty" read-only="true">
        <service-call name="create#Party"/>
        <default-response type="none"/>
    </transition>

     <transition name="partyGet" read-only="true">
        <service-call name="fetch#Party"/>
        <default-response type="none"/>
     </transition>

    <actions>
        <entity-find entity-name="moqui.party.Party" list="partyList"/>
    </actions>

    <widgets>
        <container-box>
            <box-header>
                <label type="h5" text="Party Get"/>
            </box-header>
            <box-body-nopad>
                <form-list name="Party" list="partyList" list-entry="party" skip-form="true">
                    <field name="partyId" from="context.partyId"><default-field><display/></default-field></field>
                    <field name="partyType"><default-field><display text="${partyTypeId?:'String'}"/></default-field></field>
                </form-list>
            </box-body-nopad>
        </container-box>

        <container-dialog id="GetParty" button-text="GetParty">
            <form-single name="GetParty" transition="getParty">
                <auto-fields-entity entity-name="moqui.party.Party" field-type="find" include="pk"/>
                <field name="getButton"><default-field title="GetParty"><submit/>
                </default-field></field>
            </form-single>
        </container-dialog>

        <container-dialog id="CreatePartyDialog" button-text="New Party">
            <form-single name="CreatePartyForm" transition="createParty">
                <auto-fields-entity entity-name="moqui.party.Party" field-type="edit" />
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>


    </widgets>
</screen>