<?xml version="1.0" encoding="UTF-8" ?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
       require-authentication="anonymous-all">
    <transition name="find">
        <actions>
            <service-call name="relationshipmgr.party.fetch#Party"/>
        </actions>
        <default-response type="none"/>
    </transition>
    <actions>
        <entity-find entity-name="relationshipmgr.party.Party" list="PartyList">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <widgets>
        <form-single name="FindEntityValue" transition="find">
            <field name="partyId">
                <default-field>
                    <text-find/>
                </default-field>
            </field>
            <field name="partyTypeEnumId">
                <default-field>
                    <drop-down allow-empty="true" style="">
                        <entity-options text="${description ?: ''} [${enumId}]">
                            <entity-find entity-name="moqui.basic.Enumeration" offset="0" limit="200">
                                <econdition field-name="enumTypeId" value="PartyType"/>
                                <order-by field-name="description"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </default-field>
            </field>
            <field name="submitButton">
                <default-field title="Find">
                    <submit/>
                </default-field>
            </field>
        </form-single>
        <form-single name="CreateEntityValue" transition="create">
            <field name="partyId">
                <default-field>
                    <text-line size="30"/>
                </default-field>
            </field>
            <field name="partyTypeEnumId">
                <default-field>
                    <drop-down allow-empty="true" style="">
                        <entity-options text="${description ?: ''} [${enumId}]">
                            <entity-find entity-name="moqui.basic.Enumeration" offset="0" limit="200">
                                <econdition field-name="enumTypeId" value="PartyType"/>
                                <order-by field-name="description"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </default-field>
            </field>
            <field name="submitButton">
                <default-field title="Create">
                    <submit/>
                </default-field>
            </field>
        </form-single>
    </widgets>
</screen>