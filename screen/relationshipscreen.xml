<?xml version="1.0" encoding="UTF-8" ?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
       require-authentication="anonymous-all">


    <transition name="createParty">
        <service-call name="relationshipmgr.party.PartyService.create#Party"/>
        <default-response type="none"/>
    </transition>
    <transition name="createPerson">
        <service-call name="relationshipmgr.party.PartyService.create#Person"/>
        <default-response type="none"/>
    </transition>
    <transition name="createOrg">
        <service-call name="relationshipmgr.party.PartyService.create#Organization"/>
        <default-response type="none"/>
    </transition>
    <transition name="createPartyRole">
        <service-call name="relationshipmgr.party.PartyService.create#PartyRole"/>
        <default-response type="none"/>
    </transition>

    <actions>
        <entity-find entity-name="relationshipmgr.party.Party" list="PartyList">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <widgets>
        <container-box>
            <box-header title="Party List"/>
            <box-body>
                <label text="Party List:"/>
                <container-row>
                    <row-col>
                        <form-list name="PartyDisplay" list="context.PartyList">
                            <field name="partyId">
                                <default-field title="partyId">
                                    <display/>
                                </default-field>
                            </field>
                            <field name="partyTypeEnumId">
                                <default-field title="partyTypeEnumId">
                                    <display/>
                                </default-field></field>
                        </form-list>
                    </row-col>
                </container-row>
            </box-body>
        </container-box>

<!--        Widget to create a party-->
        <container-box>
            <box-header title="Create Party"/>
            <box-body-nopad>
                <form-single name="CreateParty" transition="createParty">
                    <field name="partyId">
                        <default-field>
                            <text-line size="15"/>
                        </default-field>
                    </field>
                    <field name="partyTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="PartyType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="createPartyButton">
                        <default-field title="CreateParty">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body-nopad>
        </container-box>


<!--        Widget to create a Person-->
        <container-box>
            <box-header title="Create Person"/>
            <box-body-nopad>
                <form-single name="CreatePerson" transition="createPerson">
                    <field name="partyId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options>
                                    <entity-find entity-name="relationshipmgr.party.Party"/>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="firstName">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="lastName">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="birthDate">
                        <default-field>
                            <date-time/>
                        </default-field>
                    </field>
                    <field name="createPersonButton">
                        <default-field title="CreatePerson">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body-nopad>
        </container-box>

<!--        Widget to create organization -->
        <container-box>
            <box-header title="Create Organization"/>
            <box-body-nopad>
                <form-single name="CreateOrganization" transition="createOrg">
                    <field name="partyId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options>
                                    <entity-find entity-name="relationshipmgr.party.Party"/>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="organizationName">
                        <default-field>
                            <text-line/>
                        </default-field>
                    </field>
                    <field name="createOrgButton">
                        <default-field title="CreateOrg">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body-nopad>
        </container-box>

<!--        Widget to create party roles-->
        <container-box>
            <box-header title="Create Party Role"/>
            <box-body-nopad>
                <form-single name="CreatePartyRole" transition="createPartyRole">
                    <field name="partyId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options>
                                    <entity-find entity-name="relationshipmgr.party.Party"/>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="roleTypeEnumId">
                        <default-field>
                            <drop-down allow-empty="true" style="">
                                <entity-options text="${description ?: ''} [${enumId}]">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="RoleType"/>
                                        <order-by field-name="description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="createPartyRoleButton">
                        <default-field title="Create Role">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </box-body-nopad>
        </container-box>

    </widgets>
</screen>